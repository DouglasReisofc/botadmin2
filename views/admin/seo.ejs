<% /* SEO configuration page */ %>
<div class="config-wrapper">
  <h3>SEO Global</h3>
  <form action="/admin/seo" method="POST" enctype="multipart/form-data" class="seo-form">
    <input type="hidden" name="section" value="site">
    <label>Título
      <input type="text" name="title" value="<%= config.seo?.title || '' %>" required>
    </label>
    <label>Descrição
      <textarea name="description" rows="3" required><%= config.seo?.description || '' %></textarea>
    </label>
    <label>Palavras-chave
      <input type="text" name="keywords" value="<%= config.seo?.keywords || '' %>" required>
    </label>
    <label>Imagem (Open Graph)
      <input type="file" name="seoImage" accept="image/*">
    </label>
    <% if (config.seo?.image) { %>
      <div class="seo-preview">
        <img src="<%= config.seo.image %>" style="max-width:200px;max-height:120px;" alt="SEO image">
      </div>
    <% } %>
    <button type="submit" class="submit-btn">Salvar SEO</button>
  </form>
</div>

